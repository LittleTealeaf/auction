generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model Customer {
  id           Int     @id @unique @default(autoincrement())
  firstName    String?
  lastName     String?
  address      String?
  city         String?
  state        String?
  zip          String?
  phone        String?
  licenseState String?
  email        String?
  notes        String?
}

model Bidder {
  id                Int      @id @unique @default(autoincrement())
  bidderNumber      Int?
  auctionYear       Int?
  luPaymentMethod   Int?
  paymentDetails    String?
  paymentAdjustment Decimal?
  totalPaid         Decimal?
  numberOfGuests    Int?
}

model AuctionItem {
  id               Int      @id @unique @default(autoincrement())
  number           Int?
  description      String?
  isSilent         Boolean?
  winningBidder    Int?
  winningBidAmount Decimal?
  auctionYear      Int?
}

model User {
  id  Int @id @unique @default(autoincrement())
  password  String?
}

model AuthKey {
  key String @id @unique @default(cuid())
  userId  Int
}

