// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model Customer {
  id           Int     @id @default(autoincrement())
  firstName    String?
  lastName     String?
  address      String?
  city         String?
  state        String?
  zip          String?
  PHone        String?
  LicenseState String?
  Email        String?
  Notes        String?
}

model Bidder {
  id                Int     @id @default(autoincrement())
  customerId        Int?
  BidderNumber      Int?
  AuctionYear       Int?
  NumberOfGuests    Int?
  LUPaymentMethod   Int?
  PaymentDetails    String?
  PaymentAdjustment Float?
  TotalPaid         Float?
}

model AuctionItem {
  id               Int      @id @default(autoincrement())
  number           Int?
  description      String?
  isSilent         Boolean?
  WinningBidder    Int?
  WinningBidAmount Float?
  AuctionYear      Int?
}
