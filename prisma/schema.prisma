// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model Customer {
  id           Int     @id @unique @default(autoincrement())
  firstName    String?
  lastName     String?
  address      String?
  city         String?
  state        String?
  zip          String?
  phone        String?
  licenseState String?
  email        String?
  notes        String?
}

model Bidder {
  id                Int      @id @unique @default(autoincrement())
  bidderNumber      Int?
  auctionYear       Int?
  luPaymentMethod   Int?
  paymentDetails    String?
  paymentAdjustment Decimal?
  totalPaid         Decimal?
  numberOfGuests    Int?
}

model AuctionItem {
  id               Int      @id @unique @default(autoincrement())
  number           Int?
  description      String?
  isSilent         Boolean?
  winningBidder    Int?
  winningBidAmount Decimal?
  auctionYear      Int?
}

model User {
  id             Int     @id @unique @default(autoincrement())
  password       String?
  //Permissions
  customerRead   Boolean @default(true)
  customerWrite  Boolean @default(false)
  customerCreate Boolean @default(false)
  customerDelete Boolean @default(false)
  bidderRead     Boolean @default(true)
  bidderWrite    Boolean @default(false)
  bidderCreate   Boolean @default(false)
  bidderDelete   Boolean @default(false)
  itemRead       Boolean @default(true)
  itemWrite      Boolean @default(false)
  itemCreate     Boolean @default(false)
  itemDestroy    Boolean @default(false)
  userRead       Boolean @default(false)
  userWrite      Boolean @default(false)
  userCreate     Boolean @default(false)
  userDelete     Boolean @default(false)
}

model AuthKey {
  key    String @id @unique @default(cuid())
  userId Int
}
